using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication17
{
    class Program
    {
       
        
            static void Main(string[] args)
            {
                Console.WriteLine("Even numbers from 1 to 30:");

                for (int i = 1; i <= 30; i++)
                {
                    if (i % 2 != 0)
                    {
                        continue; // Skip odd numbers
                    }

                    Console.WriteLine(i);
                Console.ReadLine();

                }
            }
        }
    }
